{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"experimentalTernaries": true,
	"printWidth": 80,
	"tabWidth": 4,
	"semi": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"singleAttributePerLine": true,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
